generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trips {
  id           String   @id @default(uuid())
  destination  String
  starts_at    DateTime
  ends_at      DateTime
  is_confirmed Boolean  @default(false)
  created_at   DateTime @default(now())

  participants Participants[]
  activities   Activities[]
  links        Links[]

  @@map("trips")
}

model Participants {
  id           String  @id @default(uuid())
  name         String?
  email        String
  is_confirmed Boolean @default(false)
  is_owner     Boolean @default(false)
  trip_id      String

  trip Trips @relation(fields: [trip_id], references: [id])

  @@map("participants")
}

model Activities {
  id        String   @id @default(uuid())
  title     String
  occurs_at DateTime
  trip_id   String

  trip Trips @relation(fields: [trip_id], references: [id])

  @@map("activities")
}

model Links {
  id      String @id @default(uuid())
  title   String
  url     String
  trip_id String

  trip Trips @relation(fields: [trip_id], references: [id])

  @@map("links")
}
